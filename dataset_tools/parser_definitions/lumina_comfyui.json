
{
  "parser_name": "Lumina_ComfyUI",
  "priority": 195,
  "description": "Parses ComfyUI workflows for Lumina / SD3 DiT models, which often use AuraFlow sampling.",
  "version": "1.0",
  "maintainer": "Gemini",
  "target_file_types": ["PNG", "JPEG", "WEBP"],
  "detection_rules": [
    {
      "comment": "Rule 1: Must be a valid ComfyUI workflow",
      "source_type": "any_metadata_source",
      "operator": "is_valid_json"
    },
    {
      "comment": "Rule 2: Must contain the Lumina-specific text encoder.",
      "source_type": "any_metadata_source",
      "operator": "regex_match_any",
      "regex_patterns": [
        "CLIPTextEncodeLumina2"
      ]
    }
  ],
  "parsing_instructions": {
    "input_data": {
      "source_options": [
        { "source_type": "exif_user_comment" },
        { "source_type": "pil_info_key", "source_key": "workflow" },
        { "source_type": "pil_info_key", "source_key": "prompt" }
      ],
      "transformations": [
        { "type": "json_decode_string_itself" }
      ]
    },
    "fields": [
      {
        "comment": "BEST METHOD: Use the high-level dispatcher for prompts.",
        "target_key": "prompt",
        "method": "comfyui_extract_prompt_from_workflow"
      },
      {
        "target_key": "negative_prompt",
        "method": "comfyui_extract_negative_prompt_from_workflow"
      },
      {
        "target_key": "parameters.seed",
        "method": "comfy_find_input_of_main_sampler",
        "sampler_node_types": "$_sampler_node_types_var",
        "input_name": "seed"
      },
      {
        "target_key": "parameters.steps",
        "method": "comfy_find_input_of_main_sampler",
        "sampler_node_types": "$_sampler_node_types_var",
        "input_name": "steps"
      },
      {
        "target_key": "parameters.cfg_scale",
        "method": "comfy_find_input_of_main_sampler",
        "sampler_node_types": "$_sampler_node_types_var",
        "input_name": "cfg"
      },
      {
        "target_key": "parameters.sampler_name",
        "method": "comfy_find_input_of_main_sampler",
        "sampler_node_types": "$_sampler_node_types_var",
        "input_name": "sampler_name"
      },
      {
        "target_key": "parameters.scheduler",
        "method": "comfy_find_input_of_main_sampler",
        "sampler_node_types": "$_sampler_node_types_var",
        "input_name": "scheduler"
      },
      {
        "target_key": "raw_metadata",
        "method": "comfyui_extract_raw_workflow"
      }
    ],
    "output_template": {
      "tool": "Lumina (ComfyUI)",
      "prompt": "$prompt",
      "negative_prompt": "$negative_prompt",
      "parameters": {
        "steps": "$parameters.steps",
        "cfg_scale": "$parameters.cfg_scale",
        "seed": "$parameters.seed",
        "sampler_name": "$parameters.sampler_name",
        "scheduler": "$parameters.scheduler"
      },
      "raw_metadata": "$raw_metadata"
    }
  }
}
